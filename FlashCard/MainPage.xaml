<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashCard.MainPage">

    <!-- MainPage.xaml -->
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Shuffle Numbers (1 - 10)"
           FontSize="24"
           HorizontalOptions="Center" />

        <!-- CarouselView to animate cards -->
        <CarouselView x:Name="NumberCarousel"
                  HeightRequest="300"
                  IndicatorView="indicator"
                  HorizontalOptions="Fill">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="Black"
                    StrokeThickness="2"
                    Margin="10"
                    Padding="40"
                    BackgroundColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">

                        <VerticalStackLayout Spacing="10"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center">

                            <!-- Bind Key -->
                            <Label Text="{Binding Key}"
                           FontSize="20"
                           TextColor="DodgerBlue"
                           HorizontalOptions="Center" />

                            <!-- Bind Value -->
                            <Label Text="{Binding Value}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Page dots -->
        <IndicatorView x:Name="indicator"
                   IndicatorColor="LightGray"
                   SelectedIndicatorColor="DodgerBlue"
                   HorizontalOptions="Center" />

        <Button Text="Shuffle"
            Clicked="OnShuffleClicked"
            HorizontalOptions="Center"
            Padding="15,10" />

    </VerticalStackLayout>


</ContentPage>
